# Copy this file to config/database.yml
# Run rake db:migrate

sqlite: &sqlite
  adapter: sqlite3
  verbosity: quiet

postgresql: &postgresql
  adapter: postgresql
  encoding: utf8
  pool: 5
  username: angular
  password: password

test:
  <<: *sqlite
  database: tmp/dbs/angular_devise_test.db

development:
  <<: *sqlite
  database: tmp/dbs/angular_devise_development.db

production:
  <<: *postgresql
  database: angular_devise_production
