.navbar {

  /* Brand */
  .brand {
    padding: 4px 28px 0px 25px
  }

  /* Loading spinner */
  .brand.loading #loading {
    position: absolute;
    margin: 17px 0 0 440px;
    height: 16px;
    width: 16px;
    background: url("<%= asset_path('logo.gif') %>") top left no-repeat;
  }

  input {
    width: 15 * $unit;
    display: inline;
  }

  input, button {
    margin: $unit / 2;
  }

  .navbar-inner {
    height: 4 * $unit;
  }

  .icon-twitter {
    color: #08c;
  }

}
